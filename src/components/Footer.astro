---
import Logo from "./Logo.astro";
import LogoWhite from "./LogoWhite.astro";
---
<footer class="bg-zinc-900 text-white py-10 mt-16 section-padding-x!">
  <div class="container mx-auto px-4 flex flex-col lg:flex-row lg:justify-between lg:items-center gap-8">
    <!-- Logo and tagline -->
    <div class="flex flex-col items-center md:items-start gap-2 w-full md:w-1/2">
      <a href="/" class="w-32 mb-2">
        <LogoWhite />
      </a>
      <span class="text-lg text-white font-primary font-light tracking-wider">Universal Citizens of the World</span>
    </div>
    <div class="klaviyo-form-UeAR2V"></div>
    <!-- Navigation links -->
    <nav class="flex flex-col md:flex-row gap-4 md:gap-8 items-center">
      <a href="/" class="hover:text-emerald-400 transition">Home</a>
      <a href="/collections/all" class="hover:text-emerald-400 transition">Catalog</a>
      <a href="/about" class="hover:text-emerald-400 transition">About</a>
      <a href="/contact" class="hover:text-emerald-400 transition">Contact</a>
    </nav>
    <!-- Social media -->
    <div class="flex gap-4 justify-center md:justify-end">
      <a href="https://www.instagram.com/astragardee/" target="_blank" aria-label="Instagram" class="hover:text-emerald-400 transition">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><rect width="20" height="20" x="2" y="2" rx="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" y1="6.5" x2="17.5" y2="6.5"/></svg>
      </a>
      <a href="#" aria-label="Facebook" class="hover:text-emerald-400 transition">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M18 2h-3a4 4 0 0 0-4 4v3H7v4h4v8h4v-8h3l1-4h-4V6a1 1 0 0 1 1-1h3z"/></svg>
      </a>
    </div>
  </div>
  <div class="mt-8 text-center text-zinc-500 text-xs">
    &copy; {new Date().getFullYear()} Astragarde. All rights reserved.
  </div>
</footer>
