---
import Logo from "./Logo.astro";
import LogoWhite from "./LogoWhite.astro";
import Cart from "$/svgs/Cart.astro";
import SearchIcon from "$/svgs/SearchIcon.astro";
import Hamburger from "$/svgs/Hamburger.astro";
import Sidebar from "./Sidebar.astro";

const navLinks = [
  { href: "/", text: "Home" },
  { href: "/catalog", text: "Catalog" },
  { href: "/about", text: "About" },
  { href: "/contact", text: "Contact" },
]
---
<div class="absolute z-50 w-[350px] h-screen bg-white flex items-center justify-between p-4 border-b">
  <nav class="mt-6 px-2 space-y-1 flex-grow overflow-y-auto">
    <ul class="space-y-4">
      {navLinks.map((link) => (
        <li>
          <a href={link.href} class="text-gray-900 hover:text-gray-600">{link.text}</a>
        </li>
      ))}
    </ul>
  </nav>

  

  <button id="closeSidebarButton" type="button" class="p-2 rounded-md text-zinc-300 hover:text-zinc-900 focus:outline-none focus:ring-2 focus:ring-indigo-500">
    <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M6 18 18 6M6 6l12 12" />
    </svg>
  </button>
</div>

<header id="mainHeader" class="absolute top-0 z-40 w-full transition-all duration-300 xl:px-60">
  <nav class="grid grid-cols-3 items-center w-full p-8">
    <div class="flex justify-start">
      <button class="cursor-pointer"><Hamburger color="white" /></button>
    </div>
    
    <div class="flex justify-center">
      <div class="lg:max-h-8"><LogoWhite /></div>
    </div>
    
    <div class="flex justify-end gap-4">
      <a><SearchIcon color="white" /></a>
      <span><Cart color="white" /></span>
    </div>
  </nav>
</header>

<header
  id="scrolledHeader"
  class="fixed top-0 z-40 w-full translate-y-[-100%] bg-white transition-all duration-300 xl:px-60"
>
  <nav class="grid grid-cols-3 items-center w-full p-8">
    <div class="flex justify-start">
      <button class="cursor-pointer"><Hamburger /></button>
    </div>
    
    <div class="flex justify-center">
      <div class="lg:max-h-8"><Logo /></div>
    </div>
    
    <div class="flex justify-end gap-4">
      <a><SearchIcon /></a>
      <span><Cart /></span>
    </div>
  </nav>
</header>

<script>
  const scrolledHeader = document.getElementById("scrolledHeader");

  window.addEventListener("scroll", () => {
    if (window.scrollY > 200) {
      scrolledHeader?.classList.remove("translate-y-[-100%]");
    } else {
      scrolledHeader?.classList.add("translate-y-[-100%]");
    }
  });
</script>
