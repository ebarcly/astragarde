---
import { z } from "zod";
import { ProductResult } from "../utils/schemas";
import ProductCard from "./ProductCard.astro";

const ProductsResult = z.array(ProductResult);
export interface Props {
  products: z.infer<typeof ProductsResult>;
  gap?: number;
  layout?: "horizontal" | "grid";
  cardSize?: "medium" | "large" | 'extraLarge';
}
const { products, gap = 4, layout = "grid", cardSize } = Astro.props as Props;
---

<section>
  <div class="container py-16 sm:py-20">
    <h2 class="sr-only">Products</h2>

    {
      layout === "horizontal" ? (
        <div
          class={`flex flex-row gap-${gap ?? 2} scrollbar-none px-0 overflow-x-auto`}
        >
          {products.map((product) => (
            <div class="flex h-full flex-col">
              <ProductCard product={product} size={cardSize} />
            </div>
          ))}
        </div>
      ) : (
        <div
          class={`grid grid-cols-2 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-${gap}`}
        >
          {products.map((product) => (
            <div>
              <ProductCard product={product} />
            </div>
          ))}
        </div>
      )
    }
  </div>
</section>

<style>
  .scrollbar-none::-webkit-scrollbar {
    display: none;
  }
  .scrollbar-none {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
</style>
