---
import BaseLayout from "$/layouts/BaseLayout.astro";
import ContactForm from '$/components/blocks/ContactForm.astro'
---

<BaseLayout title="Contact" navigation={{variant: 'relative', enableScrollAnimation: true}}>
  <section class="container mx-auto max-w-3xl px-4 py-16">
    <ContactForm />
    <div class="mt-12 text-center text-zinc-500">
      <div class="mb-2">Or email us at <a href="mailto:support@astragarde.com" class="text-zinc-700 hover:underline">support@astragarde.com</a></div>
      <div class="flex justify-center gap-4 mt-4">
        <a href="#" aria-label="Instagram" class="hover:text-zinc-700 transition">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><rect width="20" height="20" x="2" y="2" rx="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" y1="6.5" x2="17.5" y2="6.5"/></svg>
        </a>
        <a href="#" aria-label="Facebook" class="hover:text-zinc-700 transition">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M18 2h-3a4 4 0 0 0-4 4v3H7v4h4v8h4v-8h3l1-4h-4V6a1 1 0 0 1 1-1h3z"/></svg>
        </a>
      </div>
      <div class="mt-6 text-xs">Astragarde, Universal Citizens of the World</div>
    </div>
  </section>
</BaseLayout>

